<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGroudAPP"
    tools:context="com.example.pedrito.delivery.Tela_login"
    tools:ignore="ExtraText"><![CDATA[


        android:layout_width="428dp"
        android:layout_height="825dp"
        tools:layout_editor_absoluteX="-9dp"
        tools:layout_editor_absoluteY="1dp">



        ]]>

        <EditText
            android:id="@+id/login_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/senha_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/login_id"
            android:layout_alignStart="@+id/login_id" />

        <Button
            android:id="@+id/botao_Logar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_dark"
            android:text="@string/botao_logar"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="285dp"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/senha_id"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/irCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"
            android:text="@string/Mensagem_Cadastro"
            android:textStyle="italic"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="361dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/logo"
            android:background="@drawable/moto"
            android:contentDescription=""
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>



